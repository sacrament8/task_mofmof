<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <h2><%= @article.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :物件名 %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :賃料 %><br>
    <%= f.text_field :rent %>円
  </div>
  <div>
    <%= f.label :住所 %><br>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :築年数 %><br>
    <%= f.text_field :age %>年
  </div>
  <div>
    <%= f.label :備考 %><br>
    <%= f.text_area :remark %>
  </div>
  <hr>
    <!-- 最寄り駅件数カウント用変数初期化-->
    <% moyori_count = 0 %>

    <%= f.fields_for :nearests do |nf| %>
      <h5>最寄り駅<%= moyori_count += 1 %></h5>
      <div>
        <%= nf.label :路線名 %>
      </div>
      <div>
        <%= nf.text_field :line_name %>
      </div>
      <div>
        <%= nf.label :駅名 %>
      </div>
      <div>
        <%= nf.text_field :station_name %>
      </div>
      <div>
        <%= nf.label :徒歩分数 %>
      </div>
      <div>
        <%= nf.text_field :walk_time %>分
      </div>
    <% end %>
  <%= f.submit cahnge_button_name %>
<% end %>